    <dubbo:application name="mlx-webs-member" />
	<dubbo:registry protocol="zookeeper" address="192.168.1.157:2181" />
	<dubbo:protocol name="dubbo" port="2080" />
    
    <!-- 自动扫描 -->
    <context:component-scan base-package="com.mlx.web.member" />
    <mvc:annotation-driven />
    
